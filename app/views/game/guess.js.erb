// Update question
$(".question h6").text("<%= @question %> is equal to <%= @answer.Value %>");


// Remove old options
$(".options").empty();

// Add new options
<% @records.each do |r| %>
  $(".options").append("<div class='column'><%= escape_javascript link_to image_tag(r.CountryName.tr(' ', '-'), :alt => r.CountryName, :class => 'thumbnail'), root_path, data: { method: :post, remote: true, params: { country_id: r.id }.to_param } %></div>");
<% end %>

// Update score
$(".score").text(<%= @score %>)

// Update question
$(".question_number").text(<%= question_number @score %>)
